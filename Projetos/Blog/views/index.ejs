<%- include('partials/head.ejs') %>
<%- include('partials/homenavbar.ejs') %>

<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Bem vindo</h1>
            <p class="lead">Este é um simples blog do guia do programador</p>
            <hr class="my-4">
            <p>Descrição detalhada</p>
            <a href="#" class="btn btn-primary btn-lg" role="button">Leia mais</a>
        </div>
        <hr>
        <% for(let article of articles) { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Leia o artigo</a>
                </div>
            </div>
        <% } %>
    </div>
</body>

<%- include('partials/scripts.ejs') %>